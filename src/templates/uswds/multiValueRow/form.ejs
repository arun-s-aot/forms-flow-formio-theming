<tr ref="grid-row">
  <td>
    {{ctx.element}}
  </td>
  {% if (!ctx.disabled) { %}
  <td>
    <button type="button" class="formsflow-button formsflow-button--secondary" ref="removeRow" aria-label="Remove {{ctx.component.label}} row {{ctx.index + 1}}" title="Remove row">
      <i class="{{ctx.iconClass('remove-circle')}}"></i>
    </button>
  </td>
  {% } %}
</tr>
