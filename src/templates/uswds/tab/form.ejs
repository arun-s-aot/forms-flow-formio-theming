<div class="formio-formsflow-card">
  <ul role="tablist" class="formsflow-sidenav">
    {% ctx.component.components.forEach(function(tab, index) { %}
    <li role="tab" class="formsflow-sidenav__item {{ctx.currentTab === index ? 'formsflow-current' : ''}} border-top-0" ref="{{ctx.tabLikey}}">
      <a href="#{{tab.key}}" ref="{{ctx.tabLinkKey}}">{{ctx.t(tab.label)}}</a>
    </li>
    {% }) %}
  </ul>

  {% ctx.component.components.forEach(function(tab, index) { %}
  <div
    role="tabpanel"
    class="formio-formsflow-card-body"
    style="display: {{ctx.currentTab === index ? 'block' : 'none'}}"
    ref="{{ctx.tabKey}}"
  >
    {{ctx.tabComponents[index]}}
  </div>
  {% }) %}
</div>
