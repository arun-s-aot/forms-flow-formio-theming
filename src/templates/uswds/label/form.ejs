<div class="formsflow-label {{ctx.label.className}} {{ctx.label.hidden ? 'formsflow-sr-only' : ''}}">
  <label
    ref="label"
    id="l-{{ctx.instance.id}}-{{ctx.component.key}}"
    for="{{ctx.instance.id}}-{{ctx.component.key}}"
  >
    <span>{{ ctx.t(ctx.component.label) }}</span>
    {% if (ctx.component.type === 'number' || ctx.component.type === 'phoneNumber' || ctx.component.type === 'currency') { %}
    <span class='formsflow-sr-only'>, {{ctx.t('numeric only')}},</span>
    {% } %}
  </label>
  {% if (ctx.component.tooltip && !ctx.label.hidden) { %}
    <span ref="tooltip" data-tooltip="{{ctx.component.tooltip}}" class="{{ctx.iconClass('question-sign')}} text-base" tabindex="0"></span>
  {% } %}
</div>
