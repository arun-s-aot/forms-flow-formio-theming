<table class="formsflow-table
  {{!ctx.component.bordered ? ' formsflow-table--borderless' : ''}}
  {{ ctx.component.striped ? 'formsflow-table--striped' : ''}}
">
  {% if (!ctx.component.hideLabel) { %}
  <caption>{{ctx.t(ctx.component.label)}}</caption>
  {% } %}
  {% if (ctx.component.header && ctx.component.header.length > 0) { %}
  <thead>
    <tr>
      {% ctx.component.header.forEach(function(header) { %}
      <th scope="col">{{ctx.t(header)}}</th>
      {% }) %}
    </tr>
  </thead>
  {% } %}
  <tbody>
    {% ctx.tableComponents.forEach(function(row, rowIndex) { %}
    <tr ref="row-{{ctx.id}}">
      {% row.forEach(function(column, colIndex) { %}
      <td scope="col" ref="{{ctx.tableKey}}-{{rowIndex}}"{% if (ctx.cellClassName) { %} class="{{ctx.cellClassName}}"{% } %}>{{column}}</td>
      {% }) %}
    </tr>
    {% }) %}
  </tbody>
</table>
