<div class="formio builder grid-row grid-gap formbuilder">
  <div class="grid-col-4 mobile:grid-col-3 tablet:grid-col-2 formcomponents">
    {{ctx.sidebar}}
  </div>
  <div class="grid-col-8 mobile:grid-col-9 tablet:grid-col-10 formarea">
    <ol class="display-flex padding-105 bg-base-lightest formsflow-list--unstyled margin-bottom-2">
      {% ctx.pages.forEach(function(page, pageIndex) { %}
      <li class="margin-right-1">
        <span title="{{page.title}}" class="formsflow-tag {% if (pageIndex === ctx.self.page) { %}bg-primary{% } else { %}bg-violet{% } %} wizard-page-label" ref="gotoPage">{{page.title}}</span>
      </li>
      {% }) %}
      <li class="margin-right-1">
        <span title="{{ctx.t('Create Page')}}" class="formsflow-tag bg-green wizard-page-label" ref="addPage">
          <i class="{{ctx.iconClass('plus')}}"></i> {{ctx.t('Page')}}
        </span>
      </li>
    </ol>
    <div ref="form">
      {{ctx.form}}
    </div>
  </div>
</div>
