<fieldset class="formsflow-fieldset">
  <legend class="formsflow-legend formsflow-sr-only">{{ctx.component.label}}</legend>
  <div class="formsflow-memorable-date display-flex"
    role="group"
    {% if (ctx.component.hideLabel) { %}
    aria-label="{{ctx.component.label}}"
    {% } else { %}
    aria-labelledby="l-{{ctx.instance.id}}-{{ctx.component.key}}"
    {% } %}
    {% if (ctx.component.description) { %}
    aria-describedby="d-{{ctx.instance.id}}-{{ctx.component.key}}"
    {% } %}
  >
    {% if (ctx.dayFirst && ctx.showDay) { %}
    <div class="formio-form-group formsflow-form-group--day flex-1">
      <label for="{{ctx.component.key}}-day"
        class="formsflow-label {% if (ctx.component.hideInputLabels) { %}formsflow-sr-only{% } %} {% if(ctx.component.fields.day.required) { %}field-required{% } %}"
      >{{ctx.t('Day')}}</label>

      <input class="formsflow-input formsflow-input--inline"
        ref="day"
        name="day"
        id="{{ctx.component.key}}-day"
        {% if (ctx.component.fields.day.placeholder) { %}placeholder="{{ctx.component.fields.day.placeholder}}"{% } %}
        {% if (ctx.component.description) { %}
        aria-describedby="d-{{ctx.instance.id}}-{{ctx.component.key}}"
        {% } %}
        type="number" min="1" max="31" step="1" value="">
    </div>
    {% } %}

    {% if (ctx.showMonth) { %}
    <div class="formio-form-group formsflow-form-group--month flex-1">
      <label for="{{ctx.component.key}}-month"
        class="formsflow-label {% if (ctx.component.hideInputLabels) { %}formsflow-sr-only{% } %} {% if(ctx.component.fields.month.required) { %}field-required{% } %}"
      >{{ctx.t('Month')}}</label>
      <div>{{ctx.month}}</div>
    </div>
    {% } %}

    {% if (!ctx.dayFirst && ctx.showDay) { %}
    <div class="formio-form-group formsflow-form-group--day flex-1">
      <label for="{{ctx.component.key}}-day"
        class="formsflow-label {% if (ctx.component.hideInputLabels) { %}formsflow-sr-only{% } %} {% if(ctx.component.fields.day.required) { %}field-required{% } %}"
      >{{ctx.t('Day')}}</label>

      <input class="formsflow-input formsflow-input--inline"
        ref="day"
        name="day"
        id="{{ctx.component.key}}-day"
        {% if (ctx.component.fields.day.placeholder) { %}placeholder="{{ctx.component.fields.day.placeholder}}"{% } %}
        {% if (ctx.component.description) { %}
        aria-describedby="d-{{ctx.instance.id}}-{{ctx.component.key}}"
        {% } %}
        type="number" min="1" max="31" step="1" value="">
    </div>
    {% } %}

    {% if (ctx.showYear) { %}
    <div class="formio-form-group formsflow-form-group--year flex-1">
      <label for="{{ctx.component.key}}-year"
        class="formsflow-label {% if (ctx.component.hideInputLabels) { %}formsflow-sr-only{% } %} {% if(ctx.component.fields.year.required) { %}field-required{% } %}"
      >{{ctx.t('Year')}}</label>

      <input class="formsflow-input formsflow-input--inline"
        ref="year"
        name="year"
        id="{{ctx.component.key}}-year"
        {% if (ctx.component.fields.year.placeholder) { %}placeholder="{{ctx.component.fields.year.placeholder}}"{% } %}
        {% if (ctx.component.description) { %}
        aria-describedby="d-{{ctx.instance.id}}-{{ctx.component.key}}"
        {% } %}
        type="number"
        min="{{ !!ctx.component.fields.year.minYear ? ctx.component.fields.year.minYear : 1900 }}"
        max="{{ !!ctx.component.fields.year.maxYear ? ctx.component.fields.year.maxYear : 2019 }}" value="">
    </div>
    {% } %}
  </div>
  <input name="ctx.data[day]" type="hidden" class="form-control" lang="en" value="" ref="input">
</fieldset>
