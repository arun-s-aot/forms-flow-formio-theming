<table class="formsflow-table">
  <thead>
    <tr>
      <th scope="col"></th>
      {% ctx.component.values.forEach(function(value) { %}
      <th scope="col" style="text-align: center;">{{ctx.t(value.label)}}</th>
      {% }) %}
    </tr>
  </thead>
  <tbody>
    {% ctx.component.questions.forEach(function(question) { %}
    <tr>
      <th scope="row">{{ctx.t(question.label)}}</th>
      <fieldset class="formsflow-fieldset formsflow-sr-only">
        <legend class="formsflow-sr-only">{{ctx.t(question.label)}}</legend>
        {% ctx.component.values.forEach(function(value) { %}
        <td>
          <div class="formsflow-radio">
            <input class="formsflow-radio__input" type="radio" name="{{ ctx.self.getInputName(question) }}" value="{{value.value}}" id="{{ctx.key}}-{{question.value}}-{{value.value}}" ref="input">
            <label class="formsflow-radio__label" for="{{ctx.key}}-{{question.value}}-{{value.value}}"></label>
            <label class="formsflow-sr-only" for="{{ctx.key}}-{{question.value}}-{{value.value}}">{{ctx.t(value.label)}}</label>
          </div>
        </td>
        {% }) %}
      </fieldset>
    </tr>
    {% }) %}
  </tbody>
</table>
